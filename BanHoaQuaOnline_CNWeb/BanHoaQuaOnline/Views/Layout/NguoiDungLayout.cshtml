
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Healthy Living - free css template</title>
    <meta name="keywords" content="css templates, healthy living, diet, nutrition, fitness, web design" />
    <meta name="description" content="Healthy Living - free CSS template provided by templatemo.com" />
    <link href="~/Content/css/templatemo_style.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/NguoiDungCss.css" rel="stylesheet" />
</head>
<body>

    <div id="templatemo_wrapper">

        <div id="templatemo_header">

            <div id="site_title">
                <h1>
                    <a href="@Url.Action("Index", null, new { controller = "NongSan" })" class="current">
                        <img src="~/Content/images/templatemo_logo.png" alt="Healthy Living" />
                    </a>
                </h1>
            </div>

            <div id="banner">
                <h3>Fresh fruit <br /><span>for your</span><br /> HEALTH</h3>
            </div>

        </div> <!-- end of header -->

        <div id="templatemo_menu">

            <ul>
                <li><a href="@Url.Action("Index", null, new { controller = "NongSan" })" class="current">Trang chủ</a></li>
                <li><a href="@Url.Action("HoaQuaNhap", null, new { controller = "NongSan" })">Quả nhâp</a></li>
                <li><a href="@Url.Action("HoaQuaDacSan", null, new { controller = "NongSan" })">Đặc sản</a></li>
                <li><a href="@Url.Action("RauCuSach", null, new { controller = "NongSan" })">Rau củ</a></li>
                <li><a href="@Url.Action("DoKho", null, new { controller = "NongSan" })">Đồ khô</a></li>
                <li><a href="@Url.Action("GioHang", null, new { controller = "GioHang" })">Giỏ hàng</a></li>
                <li><a href="@Url.Action("DangKy", null, new { controller = "User" })">Đăng ký</a></li>
                <li><a href="@Url.Action("DangNhap", null, new { controller = "User" })" class="last">Đăng nhập</a></li>
            </ul>

        </div> <!-- end of templatemo_menu -->

        <div id="templatemo_main">

            <div id="txtTimKiem">
                @using (Html.BeginForm("KetQuaTimKiem", "TimKiem", FormMethod.Post))
                {
                    @Html.TextBox("txtTimKiem", "", htmlAttributes: new { @class = "TextBoxTimKiem", @placeholder = "Nhập vào từ khóa cần tìm ..." })
                    @*Chèn vào image button hình ảnh*@
                    <div id="divHinhAnhTimKiem">
                        <button type="submit"><img src="~/Content/images/imgSearch.png" /></button>
                    </div>
                }

            </div>

            <div id="templatemo_content">
                @RenderBody()

            </div> <!-- end of content -->
            <div id="templatemo_sidebar">
                <div class="sidebar_box">
                    <div class="header">
                        <h3>Hoa quả bán chạy</h3>
                    </div>

                    <div class="content">
                        @Html.Action("QuaBanChayPartial", "NongSan")
                    </div>

                    <div class="bottom"></div>
                </div>

                <div class="sidebar_box">
                    <div class="header">
                        <h3>Loại nông sản</h3>
                    </div>

                    <div class="content">
                        @*chèn nông sản*@
                        @Html.Action("LoaiMoiPartial", "NongSan")
                    </div>

                    <div class="bottom"></div>
                </div>

                <div class="sidebar_box">
                    <div class="header">
                        <h3>Thông tin mở cửa</h3>
                    </div>

                    <div class="content">
                        <p>Thứ 2 - Thứ 7</p> <br />
                        <p>07:00 - 22:00</p> <br />
                        <p>Chủ nhật</p> <br />
                        <p>07:00 - 20:00</p> <br />
                        <p>_Hotline_</p> <br />
                        <p>088 48 66 88</p> <br />
                        <p>_Địa chỉ_</p> <br/>
                        <p>236 - Hoàng Quốc Việt</p><br/>
                        <p>- Cầu Giấy - Hà Nội -</p>

                        <div class="cleaner"></div>
                    </div>

                    <div class="bottom"></div>

                    <div class="cleaner"></div>
                </div>
            </div> <!-- end of sidebar -->

            <div class="cleaner"></div>

        </div> <!-- end of main-->
        <div id="templatemo_footer">
            By: Kiều Thị Thu Thương - HTTT15 - <a href="https://www.facebook.com/kttt.132">Fabook</a>
        </div> <!-- end of templatemo_footer -->
    </div> <!-- end of wrapper -->
</body>
</html>