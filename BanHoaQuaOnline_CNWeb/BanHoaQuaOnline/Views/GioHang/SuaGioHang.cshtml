@using BanHoaQuaOnline.Models
@model List<GioHang>
@{
    ViewBag.Title = "Sửa giỏ hàng";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

<h2>Giỏ hàng của bạn</h2>
<table id="divGioHang">
    <tr>
        <td>Mã nông sản</td>

        <td>Tên nông sản</td>

        <td>Ảnh bìa</td>

        <td>Đơn giá</td>

        <td>Số lượng</td>

        <td>Thành tiền</td>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>@item.idMaQua</td>

            <td>@item.iTenSP</td>

            <td><img src="@Url.Content("~/HinhAnhSP/"+item.iHinhAnh)" width="50" height="50" /></td>

            <td>
                @String.Format("{0:0,0}", item.iDonGia) VNĐ
            </td>
            @*Chỉnh sửa giỏ hàng gọi về action CapNhatGioHang*@
            @using (Html.BeginForm("EditGioHang", "GioHang", new { @iMaSP = item.idMaQua }))
            {
                <td>@Html.TextBox("txtSoLuong", item.iSoLuong) </td>

                <td>@String.Format("{0:0,0}", item.ThanhTien) VNĐ</td>

                <td>
                    <input type="submit" value="Cập nhật" />
                    <br />
                    @*Xóa giỏ hàng gọi về Action XoaGioHang*@
                    @Html.ActionLink("Xóa", "DeleteGioHang", new { @iMaSP = item.idMaQua })
                </td>
            }

            <td></td>
        </tr>

    }
</table>