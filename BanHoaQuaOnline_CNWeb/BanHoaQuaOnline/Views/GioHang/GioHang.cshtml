@using BanHoaQuaOnline.Models
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

<h2></h2>
<h2>Giỏ hàng của bạn</h2>
<h2></h2>
<table id="divGioHang">
    <tr>
        <td>Mã nông sản</td>

        <td>Tên nông sản</td>

        <td>Ảnh bìa</td>

        <td>Đơn giá</td>

        <td>Số lượng</td>

        <td>Thành tiền</td>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>@item.idMaQua</td>

            <td>@item.iTenSP</td>

            <td><a href="@Url.Action("Index", "NongSan", new { @MaQUa = item.idMaQua})"><img src="@Url.Content("~/Content/HinhAnhSP/"+item.iHinhAnh)" width="50" height="50" /></a></td>

            <td>
                @String.Format("{0:0,0}", item.iDonGia) VNĐ
            </td>

            <td>@item.iSoLuong</td>

            <td>@String.Format("{0:0,0}", item.ThanhTien) VNĐ</td>

        </tr>

    }

    <tr>
        <td colspan="6" style="text-align:right;color:blue">
            @Html.ActionLink("Chỉnh sửa giỏ hàng", "SuaGioHang")
        </td>

    </tr>
    <tr>
        <td colspan="6" style="text-align:right;color:blue">
            @using (Html.BeginForm("DatHang", "GioHang"))
            {
                <input type="submit" value="Đặt hàng" />
            }
        </td>
    </tr>
</table>