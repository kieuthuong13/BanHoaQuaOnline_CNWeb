@model IEnumerable<BanHoaQuaOnline.Models.NOISANXUAT>

@{
    ViewBag.Title = "NOISANXUAT";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<div class="table-responsive">
    <p>
        @Html.ActionLink("Add New", "_Edit_NOISANXUAT", new { controller = "Admin" })
    </p>
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TenNoiSX)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QuocGia)
